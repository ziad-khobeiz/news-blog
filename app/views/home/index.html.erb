<h2>Published Articles:</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Journalist</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.journalist_id %></td>
        <td><%= link_to 'View', article %></td>
      </tr>
    <% end %>
  </tbody>
</table>

